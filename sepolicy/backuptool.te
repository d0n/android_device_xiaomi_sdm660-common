#============= backuptool ==============
type backuptool, domain, coredomain;

neverallow {
    domain
    -recovery
    -update_engine
} backuptool:process transition;

userdebug_or_eng(`
    permissive backuptool;
')
allow backuptool shell_exec:file { entrypoint getattr };
allow backuptool update_engine:fd use;
allow backuptool update_engine_log_data_file:file append;
